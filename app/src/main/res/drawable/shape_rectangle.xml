<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 设置填充色 -->
    <solid android:color="#2F90BD"/>

    <!-- 设置内边距 -->
    <padding
        android:bottom="10dp"
        android:top="5dp"
        android:left="10dp"
        android:right="5dp"/>

    <!-- 设置矩形圆角：只适用于rectangle
     radius：圆角半径；topLeftRadius,topRightRadius,bottomLeftRadius,bottomRightRadius(优先于radius)
     -->
    <corners android:radius="200dp"/>

    <!-- 设置填充渐变色
     type:渐变类型{linear；radial：type为此类型时，必须设置android:gradientRadius；sweep：扫描性放射}
     startColor，centerColor，endColor：渐变开始、中途、结束颜色
     angle：渐变角度（linear时有效，值为45的整数倍，0：左->右，90：右->左）
     centerX、centerY：渐变中心位置（radial时有效，值为0.0-1.0,默认0.5）
     gradientRadius：渐变半径（radial时有效）
     useLevel：（true|false，LevelListDrawable）
     -->
    <gradient android:type="radial"
        android:startColor="#00F5FF"
        android:centerColor="#BA55D3"
        android:endColor="@color/yellow2"
        android:gradientRadius="50dp"
        android:centerX="0.4"
        android:centerY="0.6"/>

    <!-- 设置秒变，默认实线
     color:描边颜色;width:描边宽度;dashWidth:虚线段长度;dashGap:虚线段间隔
     -->
    <stroke android:color="@color/purple2"
        android:width="1dp"
        android:dashWidth="4dp"
        android:dashGap="1dp"/>

</shape>