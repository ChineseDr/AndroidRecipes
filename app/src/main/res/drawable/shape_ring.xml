<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="ring">
    <!-- 以下元素只适用于ring:
     innerRadius:内环半径
     innerRadiusRatio:浮点型，以环宽度的倍数来表示内环半径
     thickness:环的厚度
     thicknessRatio:以环宽度的倍数来确定厚度-->

    <size android:width="5dp"/>

    <solid android:color="@color/blue2" />

    <gradient android:type="sweep"
        android:startColor="@color/white1"
        android:endColor="@color/blue1"/>

</shape>